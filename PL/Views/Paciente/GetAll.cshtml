@model ML.Paciente
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>PACIENTES REGISTRADOS</h1>

<div style="float:right;">
    @Html.ActionLink("Agregar", "Form", "Paciente", htmlAttributes: new { @class = "btn btn-success" })
</div>

<br />
<br />
<br />

<table class="table table-hover table-striped table-bordered table-responsive">
    <thead>
        <tr class="table-secondary">
            <td style="text-align:center">Editar</td>
            <td style="display :none;">id</td>
            <td style="text-align:center">Nombre</td>
            <td style="text-align:center">Edad</td>
            <td style="text-align:center">NSS</td>
            <td style="text-align:center">Fecha Ingreso</td>
            <td style="text-align:center">Padecimiento</td>
            <td style="text-align:center">Doctor</td>
            <td style="text-align:center">Eliminar</td>
        </tr>
    </thead>

    <tbody>
        @foreach (ML.Paciente paciente in Model.Pacientes)
        {
            <tr>
                <td style="text-align: center; vertical-align: middle;"><a class="btn btn-warning glyphicon  glyphicon glyphicon-cog" href="@Url.Action("Form", "Paciente", new { IdPaciente = paciente.IdPaciente})"><i class="bi bi-pencil-square" style="color: ivory"></i></a></td>
                <td style="display :none;">@paciente.IdPaciente </td>
                <td style="text-align:center">@paciente.NombreCompleto</td>
                <td style="text-align:center">@paciente.Edad</td>
                <td style="text-align:center">@paciente.NSS</td>
                <td style="text-align:center">@paciente.FechaIngreso</td>
                <td style="text-align:center">@paciente.Padecimiento</td>
                <td style="text-align:center">@paciente.Doctor.Nombre</td>
                <td style="text-align: center; vertical-align: middle;"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Paciente", new { IdPaciente = paciente.IdPaciente})"></a></td>
            </tr>
        }

    </tbody>
</table>